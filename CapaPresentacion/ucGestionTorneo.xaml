<UserControl x:Class="CapaPresentacion.ucGestionTorneo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CapaPresentacion"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Fila 0: Título y Botones de Acción -->
        <DockPanel Grid.Row="0" Margin="0,0,0,20">

            <!-- Botones de Acción -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">

                <Button Content="➕ Crear" 
                        x:Name="btnCrearTorneo"
                        Click="CrearTorneo_Click"
                        Margin="10,0" Padding="12,7" FontWeight="SemiBold"
                        Background="#FF4CAF50" Foreground="White" BorderBrush="#FF4CAF50"/>
                <Button Content="📝 Modificar" 
                        x:Name="btnModificarTorneo"
                        Click="ModificarTorneo_Click"
                        Padding="12,7" FontWeight="SemiBold"
                        Background="#FF2196F3" Foreground="White" BorderBrush="#FF2196F3"/>

                <Button Content="👥 Gestionar Equipos" 
                        x:Name="btnGestionarParticipantes"
                        Click="GestionarParticipantes_Click"
                        Margin="10,0" Padding="12,7" FontWeight="SemiBold"
                        Background="#FF9C27B0" Foreground="White" BorderBrush="#FF9C27B0"/>
                <Button Content="🗓️ Ver Partidos" 
                        x:Name="btnVerFases"
                        Click="VerFases_Click"
                        Padding="12,7" FontWeight="SemiBold"
                        Background="#FF009688" Foreground="White" BorderBrush="#FF009688"/>

                <Button Content="🗑️ Eliminar" 
                        x:Name="btnEliminarLogico"
                        Click="EliminarLogico_Click"
                        Margin="10,0,0,0" Padding="12,7" FontWeight="SemiBold"
                        Background="#FFFF9800" Foreground="White" BorderBrush="#FFFF9800"/>
            </StackPanel>
        </DockPanel>

        <!-- Fila 1: DataGrid para listar Torneos -->
        <DataGrid x:Name="dgTorneos" Grid.Row="1" AutoGenerateColumns="False" 
                  IsReadOnly="True" HeadersVisibility="Column" 
                  SelectionMode="Single"
                  Background="#FFF0F0F0" AlternatingRowBackground="#FFE8E8E8"
                  BorderBrush="#FFCCCCCC" BorderThickness="1" 
                  Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Torneo" Binding="{Binding IDTorneos}" Width="Auto"/>
                <DataGridTextColumn Header="Nombre del Torneo" Binding="{Binding Nombre}" Width="2*"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="3*"/>
                <DataGridTextColumn Header="Fecha de Creación" Binding="{Binding FechaRegistro, StringFormat='dd/MM/yyyy HH:mm'}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
