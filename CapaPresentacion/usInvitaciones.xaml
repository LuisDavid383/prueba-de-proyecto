<UserControl x:Class="CapaPresentacion.usInvitaciones"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CapaPresentacion"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="👥 BANDEJA DE INVITACIONES PENDIENTES" 
                   FontSize="26" FontWeight="Bold" 
                   HorizontalAlignment="Left" Margin="0,0,0,20"
                   Foreground="#FF673AB7"/>

        <TabControl Grid.Row="1" Background="#FFF5F5F5" BorderBrush="#FFCCCCCC" SelectionChanged="TabControl_SelectionChanged">

            <TabItem Header="Invitaciones de Equipo (Jugador)" FontWeight="SemiBold" FontSize="14">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dgInvitacionesEquipo" Grid.Row="0" AutoGenerateColumns="False" 
                              IsReadOnly="True" HeadersVisibility="Column" SelectionMode="Single"
                              AlternatingRowBackground="#FFEFEBE9">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID Invitación" Binding="{Binding IDInvitacion}" Width="Auto"/>
                            <DataGridTextColumn Header="Equipo" Binding="{Binding NombreEquipo}" Width="1.5*"/>
                            <DataGridTextColumn Header="Deporte" Binding="{Binding Deporte}" Width="1.5*"/>
                            <DataGridTextColumn Header="Invita" Binding="{Binding UsuarioEmisor}" Width="1.5*"/>
                            <DataGridTextColumn Header="Enviada el" Binding="{Binding FechaEnvio, StringFormat='dd/MM/yyyy HH:mm'}" Width="1.5*"/>
                            <DataGridTextColumn Header="Estado" Binding="{Binding EstadoInvitacion}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="✔️ Aceptar Invitación" 
                                x:Name="btnAceptarEquipo"
                                Click="BtnAceptarEquipo_Click"
                                Margin="0,0,15,0" Padding="15,10" 
                                Background="#FF4CAF50" Foreground="White" FontWeight="Bold"/>

                        <Button Content="❌ Rechazar Invitación" 
                                x:Name="btnRechazarEquipo"
                                Click="BtnRechazarEquipo_Click"
                                Padding="15,10" 
                                Background="#FFFF9800" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Invitaciones a Torneo (Equipo)" FontWeight="SemiBold" FontSize="14">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dgInvitacionesTorneo" Grid.Row="0" AutoGenerateColumns="False" 
                              IsReadOnly="True" HeadersVisibility="Column" SelectionMode="Single"
                              AlternatingRowBackground="#FFE3F2FD">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID Participación" Binding="{Binding IDParticipacion}" Width="Auto"/>
                            <DataGridTextColumn Header="Torneo" Binding="{Binding Torneo}" Width="2*"/>
                            <DataGridTextColumn Header="Equipo" Binding="{Binding Equipo}" Width="1.5*"/>
                            <DataGridTextColumn Header="Invita (Usuario)" Binding="{Binding InvitaUsuario}" Width="1.5*"/>
                            <DataGridTextColumn Header="Enviada el" Binding="{Binding EnviadaEl, StringFormat='dd/MM/yyyy HH:mm'}" Width="1.5*"/>
                            <DataGridTextColumn Header="Estado" Binding="{Binding EstadoParticipacion}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="✔️ Aceptar Participación" 
                                x:Name="btnAceptarTorneo"
                                Click="BtnAceptarTorneo_Click"
                                Margin="0,0,15,0" Padding="15,10" 
                                Background="#FF4CAF50" Foreground="White" FontWeight="Bold"/>

                        <Button Content="❌ Rechazar Participación" 
                                x:Name="btnRechazarTorneo"
                                Click="BtnRechazarTorneo_Click"
                                Padding="15,10" 
                                Background="#FFFF9800" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
