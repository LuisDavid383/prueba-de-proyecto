<Window x:Class="CapaPresentacion.wpfInvitarJugadores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapaPresentacion"
        mc:Ignorable="d"
        Title="wpfInvitarJugadores" Height="550" Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="INVITAR JUGADORES" 
               FontSize="24" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,0,0,15"
               Foreground="#FF9C27B0"/>

        <Border Grid.Row="1" BorderBrush="#FFCCCCCC" BorderThickness="1" 
            Padding="10" Margin="0,0,0,20" Background="#FFF0F0F0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Invitando a:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                <TextBlock x:Name="txtNombreEquipo" Text="[Nombre del Equipo]" FontWeight="Bold" Foreground="#FF1E88E5"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Buscar Usuario (por Alias/Email):" 
                   VerticalAlignment="Center" Margin="0,0,10,0"/>

            <TextBox x:Name="txtBuscarUsuario" Grid.Column="1" Padding="5" 
                 TextChanged="TxtBuscarUsuario_TextChanged"/>
        </Grid>

        <DataGrid x:Name="dgUsuarios" Grid.Row="3" AutoGenerateColumns="False" 
              IsReadOnly="True" HeadersVisibility="Column" 
              SelectionMode="Single"
              Background="#FFFFFFFF" AlternatingRowBackground="#FFF5F5F5"
              BorderBrush="#FFCCCCCC" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IDUsuario}" Width="50"/>
                <DataGridTextColumn Header="Alias/Nombre Usuario" Binding="{Binding Usuario}" Width="*"/>
                <DataGridTextColumn Header="Nombre Completo" Binding="{Binding NombreCompleto}" Width="2*"/>
                <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">

            <Button Content="✉️ Enviar Invitación" 
                x:Name="btnEnviarInvitacion"
                Click="BtnEnviarInvitacion_Click"
                Margin="0,0,15,0" Padding="15,10" 
                Background="#FF4CAF50" Foreground="White" FontWeight="Bold"/>

            <Button Content="❌ Cerrar" 
                x:Name="btnCerrar"
                Click="BtnCerrar_Click"
                Padding="15,10" 
                Background="#FFCCCCCC" Foreground="Black"/>
        </StackPanel>

    </Grid>
</Window>
