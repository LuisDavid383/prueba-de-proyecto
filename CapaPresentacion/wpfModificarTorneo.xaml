<Window x:Class="CapaPresentacion.wpfModificarTorneo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapaPresentacion"
        mc:Ignorable="d"
        Title="wpfModificarTorneo" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0: Título -->
            <RowDefinition Height="Auto"/>
            <!-- 1: Input Nombre -->
            <RowDefinition Height="Auto"/>
            <!-- 2: Input Descripción -->
            <RowDefinition Height="*"/>
            <!-- 3: Espaciador -->
            <RowDefinition Height="Auto"/>
            <!-- 4: Botones de Acción -->
        </Grid.RowDefinitions>

        <!-- 1. TÍTULO -->
        <TextBlock Grid.Row="0" Text="MODIFICAR DATOS DEL TORNEO" 
               FontSize="20" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,0,0,25"
               Foreground="#FF2196F3"/>
        <!-- Color cambiado a azul para Modificar -->

        <!-- 2. CAMPO NOMBRE -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre del Torneo: *" 
                   VerticalAlignment="Center" Margin="0,10,10,10"/>
            <TextBox x:Name="txtNombreTorneo" Grid.Row="0" Grid.Column="1" 
                 Margin="10,5" Padding="5"/>
        </Grid>

        <!-- 3. CAMPO DESCRIPCIÓN -->
        <StackPanel Grid.Row="2" Margin="0,10,0,20">
            <TextBlock Text="Descripción (Opcional):" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDescripcion" 
                 Height="100" 
                 TextWrapping="Wrap" 
                 AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto" 
                 Padding="5"/>
        </StackPanel>

        <!-- 4. BOTONES DE ACCIÓN -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="💾 Guardar Cambios" 
                x:Name="btnGuardar"
                Click="BtnGuardar_Click"
                Margin="0,0,15,0" Padding="15,8" 
                Background="#FF2196F3" Foreground="White" FontWeight="Bold"/>
            <!-- Color cambiado a azul para Modificar -->

            <Button Content="❌ Cancelar" 
                x:Name="btnCancelar"
                Click="BtnCancelar_Click"
                Padding="15,8" 
                Background="#FFCCCCCC" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>
