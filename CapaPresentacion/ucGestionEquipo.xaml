<UserControl x:Class="CapaPresentacion.ucGestionEquipo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CapaPresentacion"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15.137"/>
            <RowDefinition Height="32.823"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,20">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">

                <Button Content="➕ Crear Equipo" 
        x:Name="btnCrearEquipo"
        Click="CrearEquipo_Click"
        Margin="10,0" Padding="12,7" FontWeight="SemiBold"
        Background="#FF4CAF50" Foreground="White" BorderBrush="#FF4CAF50" Width="126"/>
                <Button Content="📝 Modificar Equipo" 
        x:Name="btnModificarEquipo"
        Click="ModificarEquipo_Click"
        Padding="12,7" FontWeight="SemiBold"
        Background="#FF2196F3" Foreground="White" BorderBrush="#FF2196F3" Width="147"/>

                <Button Content="👥 Invitar Jugadores" 
        x:Name="btnInvitarJugadores"
        Click="InvitarJugadores_Click"
        Margin="10,0" Padding="12,7" FontWeight="SemiBold"
        Background="#FF9C27B0" Foreground="White" BorderBrush="#FF9C27B0" Width="140"/>
                <Button Content="👁️ Ver Integrantes" 
        x:Name="btnVerIntegrantes"
        Click="VerIntegrantes_Click"
        Padding="12,7" FontWeight="SemiBold"
        Background="#FF009688" Foreground="White" BorderBrush="#FF009688" Width="133"/>

                <Button Content="🗑️ Eliminar" 
        x:Name="btnEliminarLogico"
        Click="EliminarLogico_Click"
        Margin="10,0" Padding="12,7" FontWeight="SemiBold"
        Background="#FFFF9800" Foreground="White" BorderBrush="#FFFF9800" Width="92"/>
            </StackPanel>
        </DockPanel>

        <DataGrid x:Name="dgEquipos" Grid.Row="1" AutoGenerateColumns="False" 
          IsReadOnly="True" HeadersVisibility="Column" 
          SelectionMode="Single"
          Background="#FFF0F0F0" AlternatingRowBackground="#FFE8E8E8"
          BorderBrush="#FFCCCCCC" BorderThickness="1" Margin="0,10,0,0" Grid.RowSpan="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Equipo" Binding="{Binding IDEquipo}" Width="2*"/>
                <DataGridTextColumn Header="Nombre Equipo" Binding="{Binding Nombre}" Width="2*"/>
                <DataGridTextColumn Header="Deporte" Binding="{Binding Deporte}" Width="1.5*"/>
                <DataGridTextColumn Header="Descripcion" Binding="{Binding Descripcion}" Width="1.5*"/>
                <DataGridTextColumn Header="Fecha de Creacion" Binding="{Binding FechaRegistro}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
