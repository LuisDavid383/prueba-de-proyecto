<Window x:Class="CapaPresentacion.wpf_Pagina_Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapaPresentacion"
        mc:Ignorable="d"
        Title="wpf_Pagina_Principal" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            Padding="{TemplateBinding Padding}" 
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Efecto Hover: Azul más oscuro -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1565C0"/>
                            </Trigger>
                            <!-- Efecto Presionado: Azul muy oscuro -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Columna para el menú lateral (220px) -->
            <ColumnDefinition Width="220"/>
            <!-- Columna principal para el contenido -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. Menú Lateral (Columna 0) - Con Sombra y Diseño Mejorado -->
        <Border Grid.Column="0" Background="#FF1E88E5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="5" Color="#FF666666"/>
            </Border.Effect>

            <StackPanel Margin="10,20,10,10">

                <!-- Título del Sistema -->
                <TextBlock Text="SPORT MANAGER" 
                       Foreground="White" 
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <!-- Botones con Clicks Independientes -->
                <Button Content="🏡 Inicio"
                    Click="BtnInicio_Click" />

                <Button Content="⚽ Gestión de Equipos"
                    Click="BtnGestionEquipos_Click" />

                <Button Content="🏆 Gestión de Torneos"
                    Click="BtnGestionTorneos_Click" />

                <Button Content="👥 Invitaciones Pendientes"
                    Click="BtnInvitaciones_Click" />

                <Separator Margin="0,25"/>

                <!-- Botón Cerrar Sesión (Estilo de fondo diferente) -->
                <Button Content="🚪 Cerrar Sesión"
                    Background="#FFD32F2F"
                    Click="CerrarSesion_Click">
                    <Button.Style>
                        <!-- Sobreescribir el Trigger del Hover/Pressed solo para el Logout -->
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFAA2222"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF881111"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- 2. Área de Contenido Principal (Columna 1) -->
        <Grid Grid.Column="1" Margin="25">
            <ContentControl x:Name="ContentArea" />
        </Grid>
    </Grid>
</Window>
